#include <stdio.h>

int fact(int n) {
    int f = 1;
    for (int i = 2; i <= n; i++)
        f *= i;
    return f;
}

int main() {
    int n;
    printf("Enter number of data points: ");
    scanf("%d", &n);

    float x[n], y[n][n];
    printf("Enter the x values:\n");
    for (int i = 0; i < n; i++)
        scanf("%f", &x[i]);

    printf("Enter the corresponding y values:\n");
    for (int i = 0; i < n; i++)
        scanf("%f", &y[i][0]);

    for (int j = 1; j < n; j++) {
        for (int i = n - 1; i >= j; i--) {
            y[i][j] = y[i][j - 1] - y[i - 1][j - 1];
        }
    }

    printf("\nBackward Difference Table:\n");
    for (int i = 0; i < n; i++) {
        printf("%0.2f", x[i]);
        for (int j = 0; j <= i; j++)
            printf("\t%0.2f", y[i][j]);
        printf("\n");
    }

    float value;
    printf("\nEnter the value of x for which you want y: ");
    scanf("%f", &value);

    float h = x[1] - x[0];
    float p = (value - x[n - 1]) / h;
    float result = y[n - 1][0];
    float term = 1;

    for (int i = 1; i < n; i++) {
        term *= (p + i - 1);
        result += (term * y[n - 1][i]) / fact(i);
    }

    printf("\nValue of y at x = %.3f is %.6f\n", value, result);
    return 0;
}